<!DOCTYPE html>
<html>
<head>
  <!-- Standard Meta -->
  <meta charset="utf-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0">

  <title>Zhenhai Dashboard</title>

  <link rel="stylesheet" type="text/css" href="./assets/sementicUI/css/semantic.css">
  <link rel="stylesheet" type="text/css" href="./assets/custom/css/custom.css">

  <script src="./assets/lib/javascript/jquery-2.1.1.js"></script>
  <script src="./assets/sementicUI/javascript/semantic.js"></script>

</head>
<body>
  <div class="ui fixed transparent inverted main menu">
    <div class="container">
      <a href="/" class="item"><div class="ui header">Zhenhai Dashboard</div></a>
    </div>
  </div>
  <div class="two column ui grid" style="padding-top:60px; padding-bottom:20px">
    <div class="column"></div>
    <div class="column">
      <div>
        <% if (flash && flash.err) { %>
          <div class="ui error message">
            <div><%= flash.err[0]["message"] %></div>
          </div>
        <% } %>

        <form class="ui form segment" action="/user/login" method="POST" id="loginForm">
          <div class="field">
            <label>使用者帳號</label>
            <div class="ui left labeld icon input">
              <input placeholder="Username" type="text" name="username">
              <i class="user icon"></i>
            </div>
          </div>
          <div class="field">
            <label>密碼</label>
            <div class="ui left labeld icon input">
              <input placeholder="Password" type="password" name="password">
              <i class="lock icon"></i>
            </div>
          </div>
          <input type="submit" class="ui right floated blue submit button" value="登入" />
          <input type="hidden" name="_csrf" value="<%= _csrf %>" />
        </form> 
      </div>

      <div style="padding: 1em;">
        <div style="float: left"><a href="/forget" >忘記密碼</a></div>
        <div style="float: right"><a href="/user/signup">註冊</a></div>
      </div>
    </div>
  </div>
  <script>
    $(function() {
      var validations = {
        "username": {
          "identifier": "username",
          "rules": [{
            "type": "empty",
            "prompt": "請輸入使用者名稱"
          }]
        },
        "password": {
          "identifier": "password",
          "rules": [{
            "type": "empty",
            "prompt": "請輸入密碼"
          }]
        }
      }
      $("#loginForm").form(validations, {on: "blur", inline: true})
    })

  </script>
</body>

</html>
